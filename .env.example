# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3000

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d

# Node Exporter Port
NODE_EXPORTER_PORT=9100

# cAdvisor Port
CADVISOR_PORT=8070

# Unraid Exporter Port
UNRAID_EXPORTER_PORT=9101

# NVIDIA GPU Exporter Port
NVIDIA_GPU_EXPORTER_PORT=9835

# Email Alerting Configuration
# Enable or disable SMTP email alerts (true/false)
SMTP_ENABLED=false

# SMTP Server Settings
# Common SMTP hosts:
#   Gmail: smtp.gmail.com:587
#   Outlook: smtp-mail.outlook.com:587
#   Office365: smtp.office365.com:587
#   Yahoo: smtp.mail.yahoo.com:587
#   Custom: your.smtp.server:port
SMTP_HOST=smtp.gmail.com:587

# SMTP Authentication
# For Gmail: use your email address and an App Password (not your regular password)
# Generate App Password: https://myaccount.google.com/apppasswords
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email sender details
SMTP_FROM_ADDRESS=unraid-monitoring@yourdomain.com
SMTP_FROM_NAME=Unraid Monitoring

# Skip SSL certificate verification (set to true for self-signed certificates)
SMTP_SKIP_VERIFY=false

# Alert recipient email address (comma-separated for multiple recipients)
ALERT_EMAIL_TO=admin@yourdomain.com

# Timezone (optional)
TZ=America/New_York
